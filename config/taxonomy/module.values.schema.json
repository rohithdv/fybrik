{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "module.values.schema.json",
    "title": "Module Values Taxonomy",
    "description": "Values contributed to by the mesh for data modules. Currently contains only what is needed by OPA.",
    "definitions": {
        "module_type": {
            "type": "string",
            "description": "Type of modules supported by the M4D manager.",
            "enum": ["copy", "read", "write"]
        },
        "allowable_action_columns": {
            "type": "string",
            "enum": ["RemoveColumn", "RedactColumn", "EncryptColumn", "PeriodicBlackout"]
        },
        "allowable_action_dataset": {
            "type": "string",
            "enum": ["DenyAccess", "DenyWriting", "AllowAccess"]
        },
        "action_on_columns" :{
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Represents the unique action type taken on a list of columns",
                    "$ref": "#/definitions/allowable_action_columns"
                },
                "columns": {
                    "type": "array",
                    "description": "Represents the column names on which the actions have been taken",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["columns"],
            "additionalProperties": false
        },
        "action_on_datasets" :{
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Represents the unique action type taken on datasets",
                    "$ref": "#/definitions/allowable_action_dataset"
                }
            }
        },
        "action": {
            "type": "object",
            "description": "Contains one of two action types ",
            "oneOf": [
                {
                    "$ref": "#/definitions/action_on_columns"
                },
                {
                    "$ref": "#/definitions/action_on_datasets"
                }
	        ]
	    },
        "interface": {
            "type": "object",
            "description": "Contains protocol and data format for arrow-flight",
            "properties": {
                "protocol": {
                    "type": "string",
                    "description": "The mechanism via which the data will be accessed."
                },
                "data_format": {
                    "type":"string",
                    "description": "The data format"
                }
            },
            "anyOf": [{
                "properties": {
                    "protocol": {
                        "enum":["m4d-arrow-flight"]
                    },
                    "data_format": {
                        "enum":["arrow"]
                    }
                }
            },
            {
                "properties": {
                    "protocol": {
                        "enum":["kafka"]
                    },
                    "data_format": {
                        "enum":["json", "avro"]
                    }
                }
            },
            {
                "properties": {
                    "protocol": {
                        "enum":["s3"]
                    },
                    "data_format": {
                        "enum":["csv", "parquet"]
                    }
                }
            },
            {
                "properties": {
                    "protocol": {
                        "enum":["db2-jdbc"]
                    },
                    "data_format": {
                        "enum":["db2-jdbc"]
                    }
                }
            }]
        }
    },
    "properties": {
        "module_type": { "$ref": "#/definitions/module_type" },
	    "action": { "$ref": "#/definitions/action" },
        "interface": {"$ref": "#/definitions/interface"}
    },
    "additionalProperties": false
}
