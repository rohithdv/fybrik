                                        }
                                    }
                                }
                            }
                        },
                        "dataset_named_metadata" : {
                            "type" : "string"
                        },
                        "dataset_tags" :{
                            "type" : "array",
                            "items" :{
                                "type": "string"
                            }
                        }
                    }
                },
                "name" : {
                    "type" : "string"
                }
            }
        },
        "processing_geography" : {
            "type" : "string"
        },
        "properties" : {
            "type" : "object",
            "properties": {
                "intent": {
                    "type" : "string"
                },
                "role" : {
                    "type" : "string"
                }
            },
            "required": ["intent"]
        },
        "type": {
            "type": "string"
        }
    },
    "additionalProperties": true
}
