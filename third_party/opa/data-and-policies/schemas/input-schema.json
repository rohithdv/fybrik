        "dataset_id": {
            "type": "string"
        },
        "details": {
            "type" : "object",
            "properties": {
                "data_format": {
                    "type": "string"
                },
                "data_store":{
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "s3": {
                            "type": "object"
                        },
                        "type":{
                            "type": "integer"
                        }
                    }
                },
                "geo": {
                    "type": "string"
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "components_metadata" :{
                            "type" : "array",
                            "items": {
